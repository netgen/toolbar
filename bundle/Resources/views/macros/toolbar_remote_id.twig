{% macro toolbar_remote_id(params) %}
    {% set block_item_location_id = null %}

    {% if
        block.hasParameter('content')
        and block.parameter('content').parameterDefinition.defaultValue != "Text"
        and block.parameter('content').valueObject is defined
        and block.parameter('content').valueObject is not null
        and block.parameter('content').valueObject.contentInfo.contentTypeIdentifier starts with "ng_component_"
    %}
        {% set block_item_location_id = block.parameter('content').valueObject.mainLocationId %}
    {% endif %}

    {% if block_item_location_id is not null %}
        data-component-location-id="{{ block_item_location_id }}"
    {% else %}
        {% if location.id is not null %}
            data-item-location-id="{{ location.id }}"
        {% endif %}
    {% endif %}
{% endmacro %}