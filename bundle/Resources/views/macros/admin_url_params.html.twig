{% macro component_params(content_block = null) %}
    {% if content_block is not null %}
        {% set block_item_content_id = null %}
        {% set block_item_location_id = null %}

        {% if
            content_block.hasParameter('content')
            and content_block.parameter('content').parameterDefinition.defaultValue != "Text"
            and content_block.parameter('content').valueObject is defined
            and content_block.parameter('content').valueObject is not null
            and content_block.parameter('content').valueObject.contentInfo.contentTypeIdentifier starts with "ng_component_"
        %}
            {% set block_item_content_id = content_block.parameter('content').valueObject.id %}
            {% set block_item_location_id = content_block.parameter('location').valueObject.id %}
            data-component="true"
        {% endif %}

        {% if block_item_content_id is not null %}
            data-content-id="{{ block_item_content_id }}"
        {% endif %}

        {% if block_item_location_id is not null %}
            data-location-id="{{ block_item_location_id }}"
        {% endif %}
    {% endif %}
{% endmacro %}



{% macro item_params(content = null, location = null) %}
    data-item="true"
    {% apply spaceless %}
        {% if content is not null and content is defined %}
            {% if content.id is not null %}
                data-content-id="{{ content.id }}"
            {% endif %}
        {% endif %}
    {% endapply %}

    {% apply spaceless %}
        {% if location is not null and location is defined %}
            {% if location.id is not null %}
                data-location-id="{{ location.id }}"
            {% endif %}
        {% endif %}
    {% endapply %}
{% endmacro %}